{
  "name": "@mgsisk/postcss-config",
  "version": "0.1.1",
  "description": "Opinionated preset configuration for PostCSS.",
  "main": "src/index.js",
  "scripts": {
    "lint.js": "eslint '**/*.js' '**/.*.js'",
    "lint.json": "printf 'package-lock.json package.json' | xargs -n1 jsonlint -q",
    "lint.md": "remark . .github/ --ignore-pattern 'LICENSE*'",
    "lint.sh": "shellcheck *.sh",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "test": "tap test",
    "preversion": "npm test",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "repository": "github:mgsisk/postcss-config",
  "keywords": [
    "css",
    "postcss",
    "postcss-config",
    "postcss-plugin"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/postcss-config/issues",
  "homepage": "https://github.com/mgsisk/postcss-config#readme",
  "files": ["src"],
  "directories": {
    "doc": "docs",
    "lib": "src",
    "test": "test"
  },
  "dependencies": {
    "@mgsisk/postcss-modular-rhythm": "^0.3.0",
    "cssnano": "^4.1.10",
    "postcss": "^7.0.27",
    "postcss-easings": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-short": "^5.0.0"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^1.0.0",
    "@mgsisk/remark-lint-config": "^0.2.0",
    "eslint": "^6.8.0",
    "jsonlint": "^1.6.3",
    "remark-cli": "^8.0.0",
    "shellcheck": "^0.4.2",
    "tap": "^14.10.7",
    "yaml-lint": "^1.2.4"
  }
}
